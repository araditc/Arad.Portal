@model Arad.Portal.DataLayer.Models.DesignStructure.ModuleWithParametersValue;
@{
    var sel = "";
    if (!string.IsNullOrWhiteSpace(Model.ModuleId))
        sel = @Model.ParametersValue.SliderId;
}
<div class="row mx-2">
     <div class="col-12">
          <label class="form-label" >@Language.GetString("design_Slider")</label><br/>
          <select class="form-control selectpicker par sliderlist" cn="@ViewBag.ColNumber" rn="@ViewBag.RowNumber" sec="@ViewBag.Section" sel="@sel"
          data-live-search="true" parid="sliderList" asp-items ="@(new SelectList(ViewBag.SliderList,"Value","Text"))" >
          </select>
    </div>

     <div class="col-12 text-center">
        <button btnid="btnAddModuleWithParameters" class="btn btn-success bg-gradient btn-sm float-end m-1"
        cn="@ViewBag.ColNumber" rn="@ViewBag.RowNumber" sec="@ViewBag.Section"
        onclick="addModulesWithParams(this);" type="button">@Language.GetString("btn_Add")</button>
    </div>
</div>

