                            if (result.data.length != 0) {
                                (result.data).forEach(function(item) {
                                    var op = "<option value='" + item.permissionId + "'>" + item.title + "</option>";
                                    options += op;
                                });
                            }

                        } else if (result.status === "error") {


                        }
                        if (typemenu === 1) {
                            $("#MenuIdOfModule").html(options);
