                                if ('@Model.MenuIdOfModule' != '-1') {
                                    $("#MenuIdOfModule").val('@Model.MenuIdOfModule');
                                }
                               }
                        } else if (typemenu === 2) {
                            $("#ParentMenuId").html(options);
                             if ('@Model.IsEditView' == 'True') {
                            if ('@Model.ParentMenuId' != '-1') {
